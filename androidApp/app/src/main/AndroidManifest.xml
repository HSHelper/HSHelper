<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.hsHelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/logo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name=".androidApp.ui.contributions.groups.AddUsersToGroupActivity"></activity>
        <activity android:name=".androidApp.ui.contributions.groups.GetManyRolesActivity" />
        <activity android:name=".androidApp.ui.contributions.groups.GetManyUsersActivity" />
        <activity android:name=".androidApp.ui.contributions.groups.GetExistGroupActivity" />
        <activity android:name=".androidApp.ui.contributions.groups.GetNewGroupNameActivity" />
        <activity android:name=".androidApp.ui.contributions.groups.GroupActivity" />
        <activity
            android:name=".androidApp.ui.initial.InitialActivity"
            android:label="@string/initial_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".androidApp.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true" />
        <activity
            android:name=".androidApp.ui.navigation.NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".androidApp.ui.settings.SettingsActivity"
            android:label="@string/settings" />
        <activity
            android:name=".androidApp.ui.marks.MarksActivity"
            android:theme="@style/Theme.MyApplication.NoActionBar" />

        <service
            android:name=".androidApp.services.MyFirebaseMessagingService"
            android:directBootAware="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>